<%- include("partials/header.ejs") %>

<!-- Content -->
<section id="user-registration-form">
    
    <span id="form-icon">
        <img src="/assets/images/edit-icon.png"/>
    </span>

    <form action="/scholars" method="post">
        <label for="first-name">First Name:</label>
        <input type="text" id="first-name" name="first-name" placeholder="John" required autofocus>

        <label for="last-name">Last Name:</label>
        <input type="text" id="last-name" name="last-name" placeholder="Doe" required autofocus>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="john.doe@gmail.com" required autofocus>

        <label for="age">Age:</label>
        <input type="text" id="age" name="age" placeholder="25" required autofocus>


        <label for="genres-preferred">Genres Preferred:</label>
        <ul id="genres-preferred">
            
                <% genresAvailable.forEach(genre => { %>
                    <li>
                        <input type="checkbox" name=<%=genre.name%> id=<%=genre.name%>>
                        <label for=<%=genre.name%>><%=genre.name%></label><br/>
                    </li>
                <% }); %>
        </ul>
        <div class="clr"></div>

        <input type="submit" value="Register">
    </form>
</section>


<%- include("partials/footer.ejs") %>